# .env.example
# 澶嶅埗姝ゆ枃浠朵负 .env 骞跺～鍐欏疄闄呭€?
# ============================================
# 搴旂敤鍩虹閰嶇疆
# ============================================
APP_NAME=AI Smart Guide Service
APP_VERSION=5.3.0
APP_ENV=test
DEBUG=false

# ============================================
# 鏁版嵁搴撻厤缃?# ============================================
# 鏂瑰紡1锛氫娇鐢ㄥ閮?MySQL锛堟帹鑽愶紝宸叉湁鏁版嵁搴撴椂浣跨敤锛?DATABASE_URL=mysql+pymysql://username:password@host.docker.internal:3306/belle_ai?charset=utf8mb4

# 鏂瑰紡2锛氫娇鐢?Docker Compose 涓殑 MySQL 瀹瑰櫒锛堝惎鐢?mysql profile 鏃讹級
# DATABASE_URL=mysql+pymysql://belle_user:belle_password@mysql:3306/belle_ai?charset=utf8mb4

# MySQL 杩炴帴鍙傛暟锛堜粎鍦ㄤ娇鐢?mysql profile 鏃堕渶瑕侊級
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=belle_ai
MYSQL_USER=belle_user
MYSQL_PASSWORD=belle_password
MYSQL_PORT=3307

# ============================================
# Redis 閰嶇疆锛堝彲閫夛級
# ============================================
# 鏂瑰紡1锛氫娇鐢ㄥ閮?Redis锛堟帹鑽愶紝宸叉湁 Redis 鏃朵娇鐢級
# REDIS_URL=redis://host.docker.internal:6379/0

# 鏂瑰紡2锛氫娇鐢?Docker Compose 涓殑 Redis 瀹瑰櫒锛堝惎鐢?redis profile 鏃讹級
# REDIS_URL=redis://redis:6379/0

REDIS_PORT=6379

# ============================================
# 绔彛鏄犲皠閰嶇疆
# ============================================
APP_PORT=18000

# ============================================
# LLM 閰嶇疆
# ============================================
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen-plus

# ============================================
# Embedding 閰嶇疆
# ============================================
EMBEDDING_API_KEY=your_embedding_api_key_here
EMBEDDING_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
EMBEDDING_MODEL=text-embedding-v2

# ============================================
# Vision 妯″瀷閰嶇疆锛圴6.0.0+锛?# ============================================
VISION_MODEL=qwen-vl-max
VISION_API_KEY=your_vision_api_key_here
VISION_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
USE_MOCK_VISION=false

# ============================================
# 鏃ュ織閰嶇疆
# ============================================
LOG_LEVEL=info
LOG_DIR=logs
LOG_BACKUP_COUNT=14

# ============================================
# Intent Engine 闃堝€奸厤缃紙鍙€夛級
# ============================================
INTENT_MIN_STAY_FOR_HIGH=60
INTENT_MIN_VISITS_FOR_HIGH_WITH_FAVORITE=2
INTENT_MIN_VISITS_FOR_HESITATING=3
INTENT_MIN_STAY_FOR_HESITATING=20
INTENT_MIN_VISITS_FOR_MEDIUM=2
INTENT_MIN_STAY_FOR_MEDIUM=15
INTENT_MAX_STAY_FOR_LOW=10

# ============================================
# Copy Generation 閰嶇疆锛堝彲閫夛級
# ============================================
COPY_MAX_LENGTH=45
